        android:text="最佳成绩：暂无记录"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="18sp"
        app:fontFamily="sans-serif-medium" />

